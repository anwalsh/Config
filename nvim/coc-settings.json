{
  "coc.preferences.formatOnSaveFiletypes": ["go", "rust", "python", "javascript", "typscript", "json"],
"languageserver": {
    "golang": {
      "command": "gopls",
      "rootPatterns": ["go.mod", ".vim/", ".git/", ".hg/"],
      "filetypes": ["go"],
      "initializationOptions": {
        "hoverKind": "SynopsisDocumentation"
      }
    },
    "ccls": {
      "command": "ccls",
      "filetypes": ["c", "cpp", "cuda", "objc", "objcpp"],
      "rootPatterns": ["compile_commands.json", ".ccls", ".root", ".git/"],
      "initializationOptions": {
        "cacheDirectory": "/tmp/ccls"
      }
    },
    "rust": {
      "command": "rust-analyzer",
      "filetypes": ["rust"],
      "rootPatterns": ["Cargo.toml"]
    },
    "bash": {
      "command": "bash-language-server",
      "filetypes": ["sh"],
      "args": ["start"],
      "ignoredRootPaths": ["~"]
    }
  },
  "python.jediEnabled": false,
  "python.venvFolders": ["~/Projects/python/bosun/venv"],
  "python.venvPath": "~/.virtualenvs",
  "python.formatting.provider": "black",
  "rust-analyzer.cargo-watch.enable": false
}
